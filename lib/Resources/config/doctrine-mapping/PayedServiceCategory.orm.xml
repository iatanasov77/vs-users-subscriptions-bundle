<?xml version="1.0" encoding="UTF-8"?>
<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                  http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
>
    <mapped-superclass name="Vankosoft\UsersSubscriptionsBundle\Model\PayedServiceCategory">
        <id name="id" column="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        
        <one-to-one field="taxon" name="taxon_id" target-entity="Vankosoft\ApplicationBundle\Model\Interfaces\TaxonInterface" orphan-removal="true" >
            <cascade>
                <cascade-all/>
            </cascade>
        </one-to-one>
        
        <one-to-many field="services" target-entity="Vankosoft\UsersSubscriptionsBundle\Model\Interfaces\PayedServiceInterface" mapped-by="category" />
    </mapped-superclass>
</doctrine-mapping>