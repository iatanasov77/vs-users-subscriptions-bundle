{% extends "@VSApplication/layout.html.twig" %}

{% block title %}{{ parent() }} :: Edit Audience{% endblock %}

{% block pageTitle %}<i class="icon_genius"></i> Edit Audience{% endblock %}

{% block content %}
    <div class="container-fluid  dashboard-content">
    	<!-- ============================================================== -->
        <!-- pageheader -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">{% if(item.id) %}Edit:	{{ item.description }}{% else %}Create New Audience{% endif %}</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                    	<nav aria-label="breadcrumb">
                            {{ knp_menu_render( 'breadcrumbs', {'template': '@VSApplication/Menu/breadcrumb.html.twig'} ) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- ============================================================== -->
        <!-- end pageheader -->
        <!-- ============================================================== -->
        
    	<div class="row">
            <!-- ============================================================== -->
            <!-- basic tabs  -->
            <!-- ============================================================== -->
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="card">
                	<h5 class="card-header">Mailchimp Audience</h5>
                	<div class="card-body">
						{% if form_errors(form) is not empty %}
			                <div class="alert alert-block alert-danger fade in">
			                    <button type="button" class="close close-sm" data-dismiss="alert">
			                        <i class="icon-remove"></i>
			                    </button>
			                    <strong>Error!</strong> {{ form_errors(form) }}
			                </div>
			            {% endif %}
			            <section class="panel">                                          
			                <div class="panel-body bio-graph-info">
			                	<div id="mailchimpAudienceContainer" data-audienceId="{{ item.id }}">
                                    {% include '@VSUsersSubscriptions/MailchimpAudience/partial/audience_form.html.twig' %}
                                </div>
			                </div>
			            </section>  
	        		</div>
				</div>
			</div>
        </div>
    </div>   
{% endblock content %}
