{% extends "@VSApplication/layout.html.twig" %}

{% block title %}{{ parent() }} :: List Pages{% endblock %}

{% block content %}
	<div class="container-fluid  dashboard-content">
		<!-- ============================================================== -->
        <!-- breadcrumb -->
        <!-- ============================================================== -->
        <div class="row">
            <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                <div class="page-header">
                    <h2 class="pageheader-title">Mailchimp Audiences</h2>
                    <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                    <div class="page-breadcrumb">
                        <nav aria-label="breadcrumb">
                            {{ knp_menu_render('breadcrumbs', {'template': '@VSApplication/Menu/breadcrumb.html.twig'}) }}
                        </nav>
                    </div>
                </div>
            </div>
        </div>
        <!-- ============================================================== -->
        <!-- end breadcrumb -->
        <!-- ============================================================== -->
        
		<div class="row">   
	        <div class="col-lg-12">
	        	<a class="btn btn-primary" href="{{ path('vs_users_subscriptions_mailchimp_audiences_create') }}">Create New Audience</a>
	       	</div>
	    </div>
	    <div class="row">   
	        <div class="col-lg-12">
	            <section class="panel">
	                <table class="table table-striped table-advance table-hover">
	                    <tr>
	                        <th width="50">N</th>
	                        <th>Audience ID</th>
	                        <th>Description</th>
	                        <th width="150">Action</th>
	                    </tr>
	                    {% for item in items %}
	                        <tr>
	                            <td>
	                                {{ loop.index }} ({{ item.id }})
	                            </td>
	                            <td>
	                                <a href="{{ path('vs_users_subscriptions_mailchimp_audiences_update', {'id': item.id}) }}">
	                                    {{ item.audienceId }}
	                                </a>
	                            </td>
	                            <td>
	                                <a href="{{ path('vs_users_subscriptions_mailchimp_audiences_update', {'id': item.id}) }}">
	                                    {{ item.description }}
	                                </a>
	                            </td>
	
	                            <td>
	                                <div class="btn-group">
	                                    <div class="btn-group">
	                                        <a class="btn btn-primary" href="{{ path('vs_users_subscriptions_mailchimp_audiences_update', {'id': item.id}) }}">
	                                            <i class="glyphicon glyphicon-pencil"></i>
	                                        </a>
	                                        <a class="btn btn-danger btnDelete" href="{{ path('vs_users_subscriptions_mailchimp_audiences_delete', {'id': item.id}) }}">
	                                            <i class="icon_close_alt2"></i>
	                                        </a>
	                                    </div>
	                                </div>
	                            </td>
	                        </tr>
	                    {% endfor %}
	                </table>
	            </section>
	        </div>
	    </div>
	</div>
{% endblock %}
