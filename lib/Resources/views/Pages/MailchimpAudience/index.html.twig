{% extends "@VSApplication/layout.html.twig" %}

{% block title %}{{ parent() }} :: {{ 'vs_users_subscriptions.template.mailchimp_audiences' | trans( {},'VSUsersSubscriptionsBundle' ) }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ 'vs_users_subscriptions.template.mailchimp_audiences' | trans( {},'VSUsersSubscriptionsBundle' ) }}{% endblock %}
{% block content %}
    <div class="row">   
        <div class="col-lg-12">
            <section class="panel">
                <table class="table table-striped table-advance table-hover">
                    <tr>
                        <th width="50">N</th>
                        <th>{{ 'vs_users_subscriptions.template.mailchimp_audience_id' | trans( {},'VSUsersSubscriptionsBundle' ) }}</th>
                        <th>{{ 'vs_users_subscriptions.form.description' | trans( {},'VSUsersSubscriptionsBundle' ) }}</th>
                        <th width="150">{{ 'vs_users_subscriptions.template.action' | trans( {},'VSUsersSubscriptionsBundle' ) }}</th>
                    </tr>
                    {% for item in items %}
                        <tr>
                            <td>
                                {{ loop.index }} ({{ item.id }})
                            </td>
                            <td>
                                <a href="{{ path('vs_users_subscriptions_mailchimp_audiences_update', {'id': item.id}) }}">
                                    {{ item.audienceId }}
                                </a>
                            </td>
                            <td>
                                <a href="{{ path('vs_users_subscriptions_mailchimp_audiences_update', {'id': item.id}) }}">
                                    {{ item.description }}
                                </a>
                            </td>

                            <td>
                                <div class="btn-group">
                                    <div class="btn-group">
                                        <a class="btn btn-primary"
                                            href="{{ path('vs_users_subscriptions_mailchimp_audiences_update', {'id': item.id}) }}"
                                            title="{{ 'vs_users_subscriptions.template.edit' | trans( {},'VSUsersSubscriptionsBundle' ) }}"    
                                        >
                                            <i class="glyphicon glyphicon-pencil"></i>
                                        </a>
                                        <a class="btn btn-danger btnDelete"
                                            href="{{ path('vs_users_subscriptions_mailchimp_audiences_delete', {'id': item.id}) }}"
                                            data-csrfToken="{{ csrf_token( item.id ) }}"
                                            title="{{ 'vs_users_subscriptions.template.delete' | trans( {},'VSUsersSubscriptionsBundle' ) }}"
                                        >
                                            <i class="icon_close_alt2"></i>
                                        </a>
                                    </div>
                                </div>
                            </td>
                        </tr>
                    {% endfor %}
                </table>
            </section>
        </div>
    </div>
    
    <div style="display: none;">
        <form id="deleteForm" method="POST">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" id="project_delete__token" name="_csrf_token" value="">
        </form>
    </div>
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    

{% endblock %}
