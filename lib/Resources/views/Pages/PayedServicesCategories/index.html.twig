{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% import "@VSApplication/Macros/alerts.html.twig" as alerts %}
{% from "@VSApplication/Macros/pagination.html.twig" import pagination %}

{# Override Blocs #}
{% block title %}{{ parent() }} :: {{ 'vs_users_subscriptions.template.paid_service_categories' | trans( {},'VSUsersSubscriptionsBundle' ) }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ 'vs_users_subscriptions.template.paid_service_categories' | trans( {},'VSUsersSubscriptionsBundle' ) }}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-xl-6 col-lg-12 col-md-12 col-sm-12 col-12 mb-5">
            {% if items|length > 0 %}
                <table class="table table-striped table-advance table-hover" id="tblCategories">
                    <thead>
                        <tr>
                            <th>{{ 'vs_users_subscriptions.template.category' | trans( {},'VSUsersSubscriptionsBundle' ) }}</th>
                            <th>{{ 'vs_users_subscriptions.template.action' | trans( {},'VSUsersSubscriptionsBundle' ) }}</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for item in items %}
                            <tr>
                                <td>{{ item.name }}</td>
                                <td>
                                    <div class="btn-group">
                                        <a class="btn btn-primary"
                                           href="{{ path('vs_users_subscriptions_payed_service_category_update', {'id': item.id}) }}"
                                           title="{{ 'vs_users_subscriptions.template.edit' | trans( {},'VSUsersSubscriptionsBundle' ) }}"
                                        >
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-danger btnDeleteResource"
                                            href="{{ path('vs_users_subscriptions_payed_service_category_delete', {'id': item.id}) }}"
                                            data-csrfToken="{{ csrf_token( item.id ) }}"
                                            title="{{ 'vs_users_subscriptions.template.delete' | trans( {},'VSUsersSubscriptionsBundle' ) }}"
                                        >
                                            <i class="icon_close_alt2"></i>
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            {% else %}
                {{ alerts.info( 'vs_application.template.items_index_there_are_no_mappers_to_display' | trans( {},'VSApplicationBundle' ) ) }}
            {% endif %}
        
            {{ pagination(items) }}
        </div>
    </div>
    
    {% include '@VSApplication/Partial/resource-delete.html.twig' %}
{% endblock %}

{% block head_styles %}	
	{{ parent() }}
	
	{{ encore_entry_link_tags( 'js/payed-services-categories-listing' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/payed-services-categories-listing' ) }}
{% endblock %}
